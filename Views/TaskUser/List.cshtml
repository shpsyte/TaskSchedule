@{
    ViewData["Title"] = "Home";
}
@model IEnumerable<TaskUser>
 <div class="row">
  <div class="col-lg-12 col-md-12">
    <div class="card card-tsasks">
      <div class="card-header ">
        <a asp-action="Add" class="btn btn-success btn-round">Novo</a>
          <div class="text-center">
              <h1 class="display-6">@( User.IsInRole("ADMINISTRATOR") ? "Todas" : "Minhas") Tarefas</h1>
          </div>
        <h6 class="title d-inline">Tasks(@Model.Count())</h6>
      </div>
          <div class="table-responsive">
          <table class="table tablesorter" id="">
            <thead class=" text-primary">
              <tr>
                  <th>
                  Supervisor
                </th>
                <th>
                  Instituição
                </th>
                <th>
                  Aluno
                </th>
                <th>
                  data
                </th>
                <th class="text-center">
                  Done
                </th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              @{ var all = Model.ToList().OrderBy(a => a.Done).ThenByDescending(a => a.DateOfTest); }
              @foreach (var item in all)
              {
                <tr>
                <td>
                  @Html.DisplayFor(modelItem => item.User.Name)
                </td>

                <td>
                  @Html.DisplayFor(modelItem => item.FundationName)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.DateOfTest)
                </td>
                <td class="text-center">
                  @Html.DisplayFor(modelItem => item.Done)
                </td>
                  <td class="text-center">
                  <a class="btn btn-primary btn-sm" asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Ver</a>
                </td>
              </tr>
              }
            </tbody>
          </table>
        </div>



    </div>
  </div>
</div>
@section Scripts {

}
