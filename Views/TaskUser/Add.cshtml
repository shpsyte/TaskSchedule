@model TaskUser
@{
    ViewData["Title"] = "Register Task";
}



<div class="card">
  <div class="card-body">
    <h4 class="card-title">Adicionar Tarefa</h4>
    <h6 class="card-subtitle mb-2 text-muted"></h6>
            <form method="post">
            <!-- <div asp-validation-summary="All" class="text-danger"></div> -->

             <div class="row paceb ">
              <div class="col">
                <input type="datetime" autocomplete="off" asp-for="DateOfTest" placeholder="Quando.." class="form-control datetimepicker">
                <span asp-validation-for="DateOfTest" class="text-danger"></span>
              </div>
              <div class="col">
                <input class="form-control clockpicker" autocomplete="off" asp-for="Time" placeholder="Hora.." type="text" placeholder="Select time" data-autoclose="true">
                <span asp-validation-for="Time" class="text-danger"></span>
              </div>
            </div>

            <div class="form-group paceb">
                <label asp-for="LocationId"></label>
                <select asp-for="LocationId" class ="form-control col-md-6" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <!-- <div class="form-group paceb">
                <input asp-for="FundationName" placeholder="Instituição" class="form-control" />
                <span asp-validation-for="FundationName" class="text-danger"></span>
            </div> -->

             <div class="row paceb">
              <div class="col">
                <input asp-for="StudentName" placeholder="Estudante" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
              </div>
              <div class="col">
                <input asp-for="StudentId" placeholder="Identificação" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
              </div>
            </div>


             <div class="form-group paceb">
                <input asp-for="Link" placeholder="Link do teste" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>


             <div class="form-group paceb">
                <label asp-for="UserId"></label>
                <select asp-for="UserId" class ="form-control col-md-6" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a class="btn btn-info" asp-action="List">Lista</a>
        </form>

  </div>
</div>




@section Scripts {
  <script type="text/javascript">
    $('.clockpicker').clockpicker();
    <!-- $('.datepicker' ).datepicker(); -->
    $('.datetimepicker').datetimepicker({
    format: 'L',
    icons: {
        time: "fa fa-clock-o",
        date: "fa fa-calendar",
        up: "fa fa-chevron-up",
        down: "fa fa-chevron-down",
        previous: 'fa fa-chevron-left',
        next: 'fa fa-chevron-right',
        today: 'fa fa-screenshot',
        clear: 'fa fa-trash',
        close: 'fa fa-remove'
    }
});
  </script>

    <partial name="_ValidationScriptsPartial" />
}
