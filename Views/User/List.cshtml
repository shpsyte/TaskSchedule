@{
    ViewData["Title"] = "Usuários";
}
@model IEnumerable<ApplicationUser>


  <div class="row">
  <div class="col-lg-12 col-md-12">
    <div class="card card-tsasks">
      <div class="card-header ">
        <a asp-action="Add" class="btn btn-success btn-round">Novo</a>
          <div class="text-center">
              <h1 class="display-6">Usuários </h1>
          </div>
        <h6 class="title d-inline">Usuários (@Model.Count())</h6>
      </div>
          <div class="table-responsive">
          <table class="table tablesorter" id="">
          <thead class=" text-primary">
          <tr>
            <th data-class="expand"> Nome</th>
            <th data-hide="phone"> Email</th>
            <th data-hide="phone"> Fone</th>
          </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                  <tr>
                      <td>
                            @Html.DisplayFor(modelItem => item.Name)
                      </td>
                      <td>
                          @Html.DisplayFor(modelItem => item.Email)
                      </td>
                      <td>
                          @Html.DisplayFor(modelItem => item.PhoneNumber)
                      </td>
                  </tr>
                }
              </tbody>
          </table>
        </div>

    </div>
  </div>
</div>

