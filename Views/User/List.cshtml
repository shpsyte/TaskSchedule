@{
    ViewData["Title"] = "Usuários";
}
@model IEnumerable<ApplicationUser>


<div class="card">
  <div class="card-body">
    <h4 class="card-title">Usuários</h4>
    <h6 class="card-subtitle mb-2 text-muted">@Model.Count() registros</h6>
          <table class="table tablesorter" id="">
          <thead class=" text-tdco">
          <tr>
            <th data-class="expand"> Nome</th>
            <th data-hide="phone"> Email</th>
            <th data-hide="phone"> Fone</th>
            <th data-hide="phone"> Admin</th>
            <th data-hide="ativo"> Ativo</th>
          </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                  <tr class=@( item.EmailConfirmed ? "text-red" : "")>
                      <td>
                         <a href=@Url.Action("SetPassWord", new {email = @item.Email })>@item.Name</a>
                      </td>
                      <td>
                        <a href=@Url.Action("SetPassWord", new {email = @item.Email })>@item.Email</a>
                      </td>
                      <td>
                          @Html.DisplayFor(modelItem => item.PhoneNumber)
                      </td>
                       <td>
                         @Html.DisplayFor(modelItem => item.IsAdmin)
                      </td>
                      <td><input checked="@item.IsAtivo()" class="check-box" disabled="disabled" type="checkbox"></td>
                  </tr>
                }
              </tbody>
          </table>


    <a asp-action="Add" class="btn btn-tdco">Novo</a>
  </div>
</div>
